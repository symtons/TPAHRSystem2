{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=TPAHRSystem;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Authentication": {
    "SessionTimeoutHours": 8,
    "MaxFailedAttempts": 5,
    "LockoutMinutes": 15
  },
  "Api": {
    "Title": "TPA HR System API",
    "Version": "1.0.0",
    "Description": "Simple HR Management System with Session-based Authentication"
  }
}